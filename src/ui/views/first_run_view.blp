using Gtk 4.0;
using Adw 1;

template $FirstRunView: Adw.Bin {

  map => $_on_map();

  Box {
    orientation: vertical;
    vexpand: true;

    Adw.HeaderBar {
      styles ["flat"]
      title-widget: Label {};
    }

    Box {
      orientation: vertical;
      spacing: 12;
      valign: center;
      vexpand: true;

      Adw.Spinner {
        height-request: 64;
      }

      Box {
        orientation: vertical;
        margin-start: 12;
        margin-end: 12;

        Label _heading_lbl {
          label: "Getting things readyâ€¦";
          wrap: true;
          halign: center;
          justify: center;
          styles ["title-1"]
        }

        Label _status_lbl {
          label: "Please wait, this might take a while.";
          halign: center;
          justify: center;
          wrap: true;
        }
      }

      Button _offline_btn {
        visible: false;
        halign: center;
        label: _("Use Offline Mode");
        clicked => $_on_offline_btn_clicked();
        styles ["suggested-action", "pill"]
      }

      CheckButton _retry_check_btn {
        label: _("Try again on next run");
        visible: false;
        active: true;
        halign: center;
      }
    }
  }
}
